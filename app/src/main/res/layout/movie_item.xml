<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_movie_item"
    style="@style/container_movie_item">

    <TextView
        android:id="@+id/display_title"
        style="@style/display_title"
         app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tools_text_display_title" />

    <ImageView
        android:id="@+id/image_post"
        style="@style/image_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_title" />

    <TextView
        android:id="@+id/summary_short"
        style="@style/summary_short"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_post"
        tools:text="@string/tools_text_summary_short" />

</androidx.constraintlayout.widget.ConstraintLayout>